<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tpandroid.shinthya.shinthyayodaputri_1202154311_modul2.DineIn">

    <LinearLayout
        android:id="@+id/detail_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20sp"
            android:layout_marginTop="@dimen/margin_top_logo"
            android:text="Detail Customer:"
            android:textColor="#ED1C24"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/nama_customer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20sp"
            android:hint="Name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_customer"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="No. Meja:" />

        <Spinner
            android:id="@+id/spinner_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_table"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_logo">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@color/colorAccent"
            android:gravity="center_horizontal"
            android:onClick="onClickOrder"
            android:padding="@dimen/padding_button"
            android:text="Next"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:backgroundTint="#ED1C24"/>
    </LinearLayout>

</RelativeLayout>
